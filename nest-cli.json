{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../config/config.yaml",
        "outDir": "./dist/config"
      },
      {
        "include": "../docs/swagger.md",
        "outDir": "./dist/docs"
      },
      {
        "include": "/assets/img",
        "outDir": "./dist/src/public"
      },
      {
        "include": "/assets/templates",
        "outDir": "./dist/src/"
      }
    ]
  }
}
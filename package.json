{
  "name": "elrond-nestjs-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "run-script-os",
    "prebuild:nix": "rimraf dist",
    "prebuild:windows": "rd /s /q dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "npm run copy-devnet-config & nest start",
    "start:watch": "npm run copy-devnet-config & nest start --watch",
    "start:debug": "npm run copy-devnet-config & nest start --debug --watch",
    "start:test": "npm run copy-testnet-config & nest start",
    "start:prod": "npm run copy-mainnet-config & nest start",
    "start:custom": "npm run copy-custom-config & nest start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run copy-mainnet-config & nest build & jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --forceExit --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run copy-e2e-mainnet-config & nest build & jest --config ./src/test/jest-e2e.json --forceExit --detectOpenHandles --runInBand",
    "test:e2e:mocked": "npm run copy-e2e-mocked-mainnet-config & nest build & jest --config ./src/test/jest-e2e.json --forceExit --detectOpenHandles --runInBand",
    "test:e2e:warm": "npm run copy-e2e-mainnet-config & nest build & jest --config ./src/test/jest-e2e-warm.json --forceExit --detectOpenHandles --runInBand",
    "test:e2e:cov": "jest --config ./src/test/jest-e2e.json --coverage --forceExit --detectOpenHandles",
    "init": "run-script-os",
    "copy-mainnet-config": "run-script-os",
    "copy-testnet-config": "run-script-os",
    "copy-devnet-config": "run-script-os",
    "copy-custom-config": "run-script-os",
    "init:nix": "rimraf src/plugins && mkdir src/plugins && cp src/plugins.template/plugin.module.ts.template src/plugins/plugin.module.ts",
    "copy-devnet-config:nix": "cp ./config/config.devnet.yaml ./config/config.yaml",
    "copy-testnet-config:nix": "cp ./config/config.testnet.yaml ./config/config.yaml",
    "copy-mainnet-config:nix": "cp ./config/config.mainnet.yaml ./config/config.yaml",
    "copy-custom-config:nix": "cp ./config/config.custom.yaml ./config/config.yaml",
    "init:windows": "rimraf src/plugins && mkdir .\\src\\plugins & copy .\\src\\plugins.template\\plugin.module.ts.template .\\src\\plugins\\plugin.module.ts",
    "copy-devnet-config:windows": "copy  .\\config\\config.devnet.yaml .\\config\\config.yaml",
    "copy-testnet-config:windows": "copy  .\\config\\config.testnet.yaml .\\config\\config.yaml",
    "copy-mainnet-config:windows": "copy  .\\config\\config.mainnet.yaml .\\config\\config.yaml",
    "copy-custom-config:windows": "copy  .\\config\\config.custom.yaml .\\config\\config.yaml",
    "copy-e2e-mainnet-config": "run-script-os",
    "copy-e2e-mocked-mainnet-config": "run-script-os",
    "copy-e2e-mainnet-config:nix": "cp ./config/config.e2e.mainnet.yaml ./config/config.yaml",
    "copy-e2e-mocked-mainnet-config:nix": "cp ./config/config.e2e-mocked.mainnet.yaml ./config/config.yaml",
    "copy-e2e-mainnet-config:windows": "copy .\\config\\config.e2e.mainnet.yaml .\\config\\config.yaml",
    "copy-e2e-mocked-mainnet-config:windows": "copy .\\config\\config.e2e-mocked.mainnet.yaml .\\config\\config.yaml"
  },
  "dependencies": {
    "@elrondnetwork/erdjs": "^8.0.0",
    "@elrondnetwork/transaction-processor": "^0.1.17",
    "@nestjs/common": "^8.0.11",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "^8.0.11",
    "@nestjs/microservices": "^8.0.11",
    "@nestjs/platform-express": "^8.0.11",
    "@nestjs/platform-socket.io": "^8.0.11",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/swagger": "^5.1.0",
    "@nestjs/websockets": "^8.0.11",
    "agentkeepalive": "^4.1.4",
    "anchorme": "^2.1.2",
    "axios": "^0.24.0",
    "bignumber.js": "^9.0.1",
    "crypto-js": "^4.1.1",
    "csrf": "^3.1.0",
    "dd-trace": "^1.6.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "nest-winston": "^1.6.1",
    "node-object-hash": "^2.3.10",
    "prom-client": "^14.0.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "simple-git": "^2.46.0",
    "swagger-ui-express": "^4.1.6",
    "tiny-async-pool": "^1.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.2",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.11",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/axios": "^0.14.0",
    "@types/cron": "^1.7.3",
    "@types/crypto-js": "^4.0.2",
    "@types/csrf": "^3.1.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.10.3",
    "@types/redis": "^2.8.32",
    "@types/request-ip": "0.0.37",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^2.0.11",
    "@types/tiny-async-pool": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "run-script-os": "^1.1.6",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "./src/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage/unit",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  }
}

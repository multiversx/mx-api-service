{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "api-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "__WARM__": true
  },
  "modulePaths": [
    "../.."
  ],
  "collectCoverageFrom": [
    "./src/**/*.(t|j)s",
    "!./src/test/**"
  ],
  "coverageDirectory": "./coverage/api",
  "testTimeout": 180000
}